<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title -->
    <title>Post | Script House Team</title>

    <!-- Favicon -->
    <link rel="icon" href="http://127.0.0.1:2000/img/core-img/favicon.ico">

    <!-- Core Stylesheet -->
    <link rel="stylesheet" href="http://127.0.0.1:2000/style.css">
    <link rel="stylesheet" href="http://127.0.0.1:2000/substyle.css">

</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <% include partials/header %>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Breadcrumb Area Start ##### -->
    <div class="breadcrumb-area">
        <!-- Top Breadcrumb Area -->
        <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url(http://127.0.0.1:2000/img/bg-img/2.jpg);">
            <h2 id="text-style-hash">Script House Blog</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="home"><i class="fa fa-home"></i> Home</a></li>
                            <li class="breadcrumb-item"><a href="blog">Blog</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><%= postTitle %></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcrumb Area End ##### -->

    <!-- ##### Blog Content Area Start ##### -->
    <section class="blog-content-area section-padding-0-100">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Blog Posts Area -->
                <div class="col-12 col-md-8">
                    <div class="blog-posts-area">

                        <!-- Post Details Area -->
                        <div class="single-post-details-area">
                            <div class="post-content">
                                <h4 class="post-title" id="title"><%= postTitle %></h4>
                                <div class="post-meta mb-30">
                                    <a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i> 19 Jun 2018</a>
                                    <a href="#"><i class="fa fa-user" aria-hidden="true"></i><%= postEditor %></a>
                                </div>
                                <div class="post-thumbnail mb-30">
                                    <img src="http://127.0.0.1:2000/img/bg-img/25.jpg" alt="">
                                </div>
                                <p><%= postTopic %></p>
                                <div class="row mb-30">
                                    <div class="col-lg-7">
                                        <p><%= postTopic %></p>
                                        <p><%= postTopic %></p>
                                    </div>
                                    <div class="col-lg-5">
                                        <img src="http://127.0.0.1:2000/img/bg-img/offer-2.jpg" alt="">
                                    </div>
                                </div>
                                
                                <blockquote>
                                    <div class="blockquote-text">
                                        <h5>“<%= postSubTitle %>”</h5>
                                        <h5><%= postEditor %></h5>
                                    </div>
                                </blockquote>
                                <p><%= subTitleTopic %></p>
                                
                            </div>
                        </div>

                        <!-- Post Tags & Share -->
                        <div class="post-tags-share d-flex justify-content-between align-items-center">
                            <!-- Tags -->
                            <ol class="popular-tags d-flex align-items-center flex-wrap">
                                <!-- <li><span>Tag:</span></li> -->
                                <!-- <li><a href="#">PLANTS</a></li> -->
                                <!-- <li><a href="#">CACTUS</a></li> -->
                            </ol>
                            <!-- Share -->
                            <div class="post-share">
                                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                                <a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                            </div>
                        </div>

                        <!-- Comment Area Start -->
                        <div class="comment_area clearfix">
                            <h4 class="headline comments-count"></h4>

                            <ol class="append-post-comments">
                            
                              
                            </ol>
                        </div>

                        <!-- Leave A Comment -->
                        <div class="leave-comment-area clearfix">
                            <div class="comment-form">
                                <h4 class="headline">Leave A Comment</h4>

                                <div class="contact-form-area">
                                    <!-- Comment Form -->
                                    <!-- <form action="" method=""> -->
                                        <div class="row">
                                            <div class="col-12 col-md-6">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" id="comment-name" placeholder="Name" required>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-6">
                                                <div class="form-group">
                                                    <input type="email" class="form-control" id="comment-email" placeholder="Email" required>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <textarea class="form-control" name="message" id="comment-msg" cols="30" rows="10" placeholder="Comment" required></textarea>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <button type="button" id="comment-btn" class="btn alazea-btn">Post Comment</button>
                                            </div>
                                        </div>
                                    <!-- </form> -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Blog Sidebar Area -->
                <div class="col-12 col-sm-9 col-md-4">
                    <div class="post-sidebar-area">

                        <!-- ##### Single Widget Area ##### -->
                        <div class="single-widget-area">
                            <form action="#" method="get" class="search-form">
                                <input type="search" name="search" id="widgetSearch" placeholder="Search...">
                                <button type="submit"><i class="icon_search"></i></button>
                            </form>
                        </div>

                        <!-- ##### Single Widget Area ##### -->
                        <div class="single-widget-area">
                            <!-- Author Widget -->
                            <div class="author-widget">
                                <div class="author-thumb-name d-flex align-items-center">
                                    <div class="author-thumb">
                                        <img src="http://127.0.0.1:2000/img/bg-img/29.jpg" alt="">
                                    </div>
                                    <div class="author-name">
                                        <h5>Elsiddig Ahmed</h5>
                                        <p>Editor</p>
                                    </div>
                                </div>
                                <p>I’m the UI/UX Developer, A Part Of Script House Team Works On Front-End, And Unix System Administerator.</p>
                                <div class="social-info">
                                    <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                                    <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                                    <a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                                    <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                                </div>
                            </div>
                        </div>

                        <!-- ##### Single Widget Area ##### -->
                        <div class="single-widget-area append-post-on-resent">
                            <!-- Title -->
                            <div class="widget-title">
                                <h4>Recent post</h4>
                            </div>

                            <!-- Single Latest Posts -->
                            
                        </div>

                        <!-- ##### Single Widget Area ##### -->
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Blog Content Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <% include partials/footer %>
    <!-- ##### Footer Area End ##### -->

    <!-- ##### All Javascript Files ##### -->
    <!-- jQuery-2.2.4 js -->
    <script src="http://127.0.0.1:2000/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="http://127.0.0.1:2000/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="http://127.0.0.1:2000/js/bootstrap/bootstrap.min.js"></script>
    <!-- All Plugins js -->
    <script src="http://127.0.0.1:2000/js/plugins/plugins.js"></script>
    <!-- Active js -->
    <script src="http://127.0.0.1:2000/js/active.js"></script>
    <!--  -->
    <script src="http://127.0.0.1:2000/js/socket.io.js"></script>
    <!--  -->
    <script src="http://127.0.0.1:2000/js/senddata.js"></script>

    <script src="http://127.0.0.1:2000/js/posts.js"></script>
</body>
</html>
